{
  "expo": {
    "name": "MuzMates",
    "slug": "muzmates",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "muzmates",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.intoku.muzmates",
      "buildNumber": "1",
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to let you upload listing photos.",
        "NSPhotoLibraryAddUsageDescription": "We need access to save photos.",
        "NSCameraUsageDescription": "We need access to your camera to take listing photos.",
        "NSLocationWhenInUseUsageDescription": "We use your location to show nearby listings (optional).",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.yourcompany.muzmates",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-video",
      [
        "expo-image-picker",
        {
          "photosPermission": "We need access to your photo library to let you upload listing photos.",
          "cameraPermission": "We need access to your camera to take listing photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "expo-video": {
        "supportsBackgroundPlayback": true,
        "supportsPictureInPicture": true
      }
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b3c0b763-ada3-4eab-a213-8a41a741dd1b"
      }
    }
  }
}
